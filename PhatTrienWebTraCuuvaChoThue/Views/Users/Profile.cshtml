@model PhatTrienWebTraCuuvaChoThue.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h4>
            </div>
            <div class="card-body">
                <p><i class="fas fa-user me-2 text-secondary"></i><strong>Họ tên:</strong> @Model.FullName</p>
                <p><i class="fas fa-envelope me-2 text-secondary"></i><strong>Email:</strong> @Model.Email</p>
                <p><i class="fas fa-user-tag me-2 text-secondary"></i><strong>Vai trò:</strong> @(Model.Role ?? "User")</p>

                <div class="d-grid mt-4">
                    <a asp-action="Logout" class="btn btn-outline-danger">
                        <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
