@model PhatTrienWebTraCuuvaChoThue.Models.User
@{
    ViewData["Title"] = "Xoá người dùng";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card border-danger shadow">
            <div class="card-header bg-danger text-white">
                <h4><i class="bi bi-trash-fill"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <p class="text-danger">Bạn có chắc chắn muốn xoá người dùng sau không?</p>

                <dl class="row">
                    <dt class="col-sm-4"><i class="bi bi-person-fill"></i> Họ tên:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4"><i class="bi bi-envelope-fill"></i> Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4"><i class="bi bi-person-gear"></i> Vai trò:</dt>
                    <dd class="col-sm-8">@Model.Role</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i> Xoá
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Huỷ
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

