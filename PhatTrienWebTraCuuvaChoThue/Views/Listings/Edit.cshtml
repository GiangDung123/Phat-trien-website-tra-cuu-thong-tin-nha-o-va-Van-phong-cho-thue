@model PhatTrienWebTraCuuvaChoThue.Models.Listing
@{
    ViewData["Title"] = "Chỉnh sửa tin đăng";
}

<h2 class="mb-4 text-primary"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data" class="row g-3">
    @* ID và thời gian tạo ẩn đi *@
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedAt" />

    <div class="col-md-6">
        <label asp-for="Title" class="form-label"><i class="bi bi-type"></i> Tiêu đề</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Price" class="form-label"><i class="bi bi-currency-dollar"></i> Giá</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Area" class="form-label"><i class="bi bi-aspect-ratio"></i> Diện tích (m²)</label>
        <input asp-for="Area" class="form-control" />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label"><i class="bi bi-card-text"></i> Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="CategoryId" class="form-label"><i class="bi bi-tag"></i> Danh mục</label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
    </div>

    <div class="col-md-4">
        <label asp-for="LocationId" class="form-label"><i class="bi bi-geo-alt"></i> Vị trí</label>
        <select asp-for="LocationId" class="form-select" asp-items="ViewBag.LocationId"></select>
    </div>

    <div class="col-md-4">
        <label asp-for="OwnerId" class="form-label"><i class="bi bi-person"></i> Người đăng</label>
        <select asp-for="OwnerId" class="form-select" asp-items="ViewBag.OwnerId"></select>
    </div>

    <div class="col-12">
        <label class="form-label"><i class="bi bi-images"></i> Thêm ảnh mới (tuỳ chọn)</label>
        <input type="file" name="uploadedImages" multiple class="form-control" />
    </div>

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary me-2"><i class="bi bi-check-circle"></i> Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Huỷ</a>
    </div>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <partial name="_ValidationScriptsPartial" />
}
