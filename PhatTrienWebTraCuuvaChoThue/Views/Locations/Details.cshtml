@model PhatTrienWebTraCuuvaChoThue.Models.Location

@{
    ViewData["Title"] = "Chi tiết địa điểm";
}

<h2 class="mb-4"><i class="bi bi-geo-alt-fill"></i> @ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tỉnh / Thành phố</dt>
            <dd class="col-sm-9">@Model.Province</dd>

            <dt class="col-sm-3">Quận / Huyện</dt>
            <dd class="col-sm-9">@Model.District</dd>

            <dt class="col-sm-3">Phường / Xã</dt>
            <dd class="col-sm-9">@Model.Ward</dd>

            <dt class="col-sm-3">Đường / Phố</dt>
            <dd class="col-sm-9">@Model.Street</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
        <i class="bi bi-pencil-square"></i> Sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Quay lại
    </a>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
