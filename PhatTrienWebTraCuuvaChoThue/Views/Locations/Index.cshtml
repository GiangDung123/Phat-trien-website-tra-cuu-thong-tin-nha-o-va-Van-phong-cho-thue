@model IEnumerable<PhatTrienWebTraCuuvaChoThue.Models.Location>
@{
    ViewData["Title"] = "Danh sách địa điểm";
}

<h2 class="mb-4"><i class="bi bi-geo-alt-fill"></i> @ViewData["Title"]</h2>

<table class="table table-striped table-bordered table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th scope="col">Tỉnh/Thành</th>
            <th scope="col">Quận/Huyện</th>
            <th scope="col">Phường/Xã</th>
            <th scope="col">Đường</th>
            <th scope="col" style="width: 180px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Province</td>
                <td>@item.District</td>
                <td>@item.Ward</td>
                <td>@item.Street</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-info-circle"></i> Chi tiết
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Thêm địa điểm
</a>
